<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PrimeraPregunta">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/yoda" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:text="¿Cuál es el nombre de este personaje?"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="156dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:onClick="Fallo"
        android:text="El Grinch"
        app:backgroundTint="@color/design_default_color_error" />

    <Button
        android:id="@+id/button7"
        android:layout_width="156dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:onClick="Correcto"
        android:text="Yoda"
        app:backgroundTint="@color/design_default_color_error" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="Fallo"
        android:text="Obi-Wan Kenobi"
        app:backgroundTint="@color/design_default_color_error" />

    <Button
        android:id="@+id/button9"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:onClick="Fallo"
        android:text="Darth Vader"
        app:backgroundTint="@color/design_default_color_error" />
</LinearLayout>