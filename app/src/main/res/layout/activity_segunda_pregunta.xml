<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SegundaPregunta">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/tatooine" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="238dp"
        android:layout_height="67dp"
        android:layout_gravity="center_horizontal"
        android:text="¿En qué planeta nació Anakin Skywalker?"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="156dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:onClick="Fallo"
        android:text="Kamino"
        app:backgroundTint="@color/design_default_color_error" />

    <Button
        android:id="@+id/button10"
        android:layout_width="156dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:onClick="Fallo"
        android:text="Mustafar"
        app:backgroundTint="@color/design_default_color_error" />

    <Button
        android:id="@+id/button11"
        android:layout_width="153dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:onClick="Correcto"
        android:text="Tatooine"
        app:backgroundTint="@color/design_default_color_error" />

    <Button
        android:id="@+id/button12"
        android:layout_width="152dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:onClick="Fallo"
        android:text="Dagobah"
        app:backgroundTint="@color/design_default_color_error" />

</LinearLayout>